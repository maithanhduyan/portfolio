<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="view_transaction_type_form">
        <field name="name">portfolio.transaction_type.form</field>
        <field name="model">portfolio.transaction_type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_transaction_type_tree">
        <field name="name">portfolio.transaction_type.tree</field>
        <field name="model">portfolio.transaction_type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_transactions_type">
        <field name="name">Transaction Type</field>
        <field name="res_model">portfolio.transaction_type</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>